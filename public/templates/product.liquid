<div class="page-width" style="max-width: 1400px; margin: 0 auto; padding: 4rem 2rem;">
  <div class="product-tactical-grid">
    
    <!-- Product Image (Left) -->
    <div class="product-media">
      <div class="media-frame">
        {% if product.featured_image != blank %}
          <img src="{{ product.featured_image | img_url: '1024x1024' }}" alt="{{ product.featured_image.alt | escape }}">
        {% else %}
          <span class="no-image">No Image</span>
        {% endif %}
      </div>
    </div>

    <!-- Product Intel (Right) -->
    <div class="product-intel">
      <h1 class="product-title">{{ product.title }}</h1>
      
      <div class="product-price">
        {{ product.price | money }}
        {% if product.compare_at_price > product.price %}
          <s class="price-compare">{{ product.compare_at_price | money }}</s>
        {% endif %}
      </div>

      <div class="product-description">
        {{ product.description }}
      </div>

      <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        
        <div class="form-row">
          <div class="qty-wrapper">
            <label for="Quantity">QTY</label>
            <input type="number" id="Quantity" name="quantity" value="1" min="1">
          </div>

          <button type="submit" name="add" class="btn-add-cart">
            Add to Cart
          </button>
        </div>
      </form>
      
      <!-- TACTICAL BRIEFING (Video Section) -->
      <div class="tactical-briefing">
        <div class="briefing-header">
          <span class="briefing-icon">â–¶</span>
          <h3>Mission Intel: Tactical Briefing</h3>
        </div>
        <div class="briefing-video-container">
          <!-- Placeholder for dynamic video logic. In a real theme, this would use a metafield. -->
          <!-- For now, we use a generic Wolfpack video or a placeholder message -->
          <iframe src="https://www.youtube.com/embed/mK8iwPZSMnE" title="Tactical Briefing" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  /* Product Page Styles */
  .product-tactical-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .media-frame {
    background: #1a1a1a;
    border: 1px solid #333;
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  .media-frame::after {
    content: '';
    position: absolute;
    inset: 0;
    border: 1px solid rgba(255,255,255,0.1);
    pointer-events: none;
    margin: 10px; /* Inner border effect */
  }
  .media-frame img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .product-title {
    font-family: var(--font-heading);
    font-size: 3rem;
    color: #fff;
    margin: 0 0 1rem;
    line-height: 1;
    text-transform: uppercase;
  }

  .product-price {
    font-family: var(--font-body);
    font-size: 2rem;
    color: var(--color-gold);
    margin-bottom: 2rem;
    font-weight: bold;
  }
  .price-compare {
    color: #666;
    font-size: 1.2rem;
    margin-left: 1rem;
  }

  .product-description {
    color: #ccc;
    margin-bottom: 3rem;
    line-height: 1.8;
    font-size: 1.1rem;
    border-left: 2px solid var(--color-gold);
    padding-left: 1.5rem;
  }

  .form-row {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
  }
  .qty-wrapper {
    display: flex;
    flex-direction: column;
  }
  .qty-wrapper label {
    font-size: 0.8rem;
    color: #999;
    margin-bottom: 0.5rem;
    font-weight: bold;
  }
  .qty-wrapper input {
    background: #000;
    border: 1px solid #333;
    color: #fff;
    padding: 1rem;
    width: 80px;
    text-align: center;
    font-size: 1.2rem;
    font-family: var(--font-body);
  }

  .btn-add-cart {
    flex-grow: 1;
    background: var(--color-gold);
    color: #000;
    border: none;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.2s ease;
    letter-spacing: 1px;
  }
  .btn-add-cart:hover {
    background: #fff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 215, 0, 0.3);
  }

  /* TACTICAL BRIEFING CONTAINER */
  .tactical-briefing {
    margin-top: 2rem;
    border: 1px solid #333;
    background: #0a0a0a;
  }
  .briefing-header {
    background: #1a1a1a;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #333;
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .briefing-icon {
    color: var(--color-gold);
    font-size: 0.8rem;
  }
  .briefing-header h3 {
    margin: 0;
    color: #fff;
    font-family: var(--font-body);
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 2px;
  }
  .briefing-video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
    background: #000;
  }
  .briefing-video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .product-tactical-grid { grid-template-columns: 1fr; gap: 2rem; }
    .product-title { font-size: 2.5rem; }
  }
</style>
