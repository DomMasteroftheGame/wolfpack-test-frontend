<div class="page-width" style="max-width: 1200px; margin: 0 auto; padding: 2rem;">
  <header class="section-header text-center" style="margin-bottom: 3rem;">
    <h1 class="section-header__title" style="color: var(--color-gold); font-size: 2.5rem; text-transform: uppercase;">
      {{ collection.title }}
    </h1>
    {% if collection.description != blank %}
      <div class="rte section-header__description" style="color: #ccc; max-width: 800px; margin: 1rem auto;">
        {{ collection.description }}
      </div>
    {% endif %}
  </header>

  <div class="collection-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 2rem;">
    {% for product in collection.products %}
      <div class="grid-product" style="background: #1a1a1a; border: 1px solid #333; transition: transform 0.2s;">
        <a href="{{ product.url | within: collection }}" style="text-decoration: none; color: inherit;">
          <div class="grid-product__image-wrapper" style="position: relative; padding-top: 100%; overflow: hidden;">
            {% if product.featured_image != blank %}
              <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.featured_image.alt | escape }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;">
            {% else %}
              <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #222; display: flex; align-items: center; justify-content: center; color: #666;">
                No Image
              </div>
            {% endif %}
          </div>
          
          <div class="grid-product__meta" style="padding: 1.5rem; text-align: center;">
            <div class="grid-product__title" style="font-weight: bold; margin-bottom: 0.5rem; color: #fff;">{{ product.title }}</div>
            <div class="grid-product__price" style="color: var(--color-gold);">
              {% if product.compare_at_price > product.price %}
                <span class="visually-hidden">Regular price</span>
                <s style="color: #666; margin-right: 0.5rem;">{{ product.compare_at_price | money }}</s>
              {% endif %}
              {{ product.price | money }}
            </div>
          </div>
        </a>
        
        <form method="post" action="/cart/add" style="padding: 0 1.5rem 1.5rem;">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
          <button type="submit" class="btn" style="width: 100%; padding: 0.8rem; background: transparent; border: 1px solid var(--color-gold); color: var(--color-gold); cursor: pointer; text-transform: uppercase; font-weight: bold;">
            Add to Cart
          </button>
        </form>
      </div>
    {% else %}
      <div class="grid__item small--text-center" style="grid-column: 1 / -1; text-align: center; padding: 4rem;">
        <p style="color: #999;">There are no products in this collection yet.</p>
      </div>
    {% endfor %}
  </div>

  {% if paginate.pages > 1 %}
    <div class="pagination" style="text-align: center; margin-top: 4rem;">
      {{ paginate | default_pagination }}
    </div>
  {% endif %}
</div>
